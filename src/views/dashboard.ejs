<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard - Oficina de Víctimas de Delitos</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="dashboard.html">
          <i class="bi bi-shield-check"></i> OVD - Exaltación de la Cruz
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link active" href="/dashboard"
                ><i class="bi bi-house-door"></i> Dashboard</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/agregar-persona"
                ><i class="bi bi-person-plus"></i> Agregar Persona</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/agregar-caso"
                ><i class="bi bi-file-earmark-plus"></i> Agregar Caso</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/lista-casos"
                ><i class="bi bi-list-ul"></i> Lista de Casos</a
              >
            </li>
          </ul>

          <div class="dropdown me-3">
            <button
              class="btn btn-outline-light dropdown-toggle"
              type="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              <i class="bi bi-person-circle"></i>
              <span id="currentUser">Usuario</span>
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
              <li>
                <a class="dropdown-item" href="/register"
                  ><i class="bi bi-gear"></i> Configuración</a
                >
              </li>
              <li><hr class="dropdown-divider" /></li>
              <li>
                <button class="dropdown-item text-danger" onclick="logout()">
                  <i class="bi bi-box-arrow-right"></i> Cerrar sesión
                </button>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </nav>

    <div class="container-fluid py-4">
      <div class="row mb-4">
        <div class="col-12">
          <h2 class="page-title">Dashboard de Estadísticas</h2>
          <p class="text-muted">Visualización de datos de casos registrados</p>
        </div>
      </div>

      <div class="row g-4">
        <div class="col-lg-4 col-md-6">
          <div class="card stats-card">
            <div class="card-body">
              <h5 class="card-title">Delitos del Año</h5>
              <canvas id="chartDelitosAnio"></canvas>
            </div>
          </div>
        </div>

        <div class="col-lg-4 col-md-6">
          <div class="card stats-card">
            <div class="card-body">
              <h5 class="card-title">Delitos por Sexo</h5>
              <canvas id="chartDelitosSexo"></canvas>
            </div>
          </div>
        </div>

        <div class="col-lg-4 col-md-6">
          <div class="card stats-card">
            <div class="card-body">
              <h5 class="card-title">Tipos de Delitos</h5>
              <canvas id="chartTiposDelitos"></canvas>
            </div>
          </div>
        </div>
      </div>

      <div class="row mt-4">
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Resumen General</h5>
              <div class="row text-center">
                <div class="col-md-3">
                  <div class="stat-box">
                    <h3 id="totalCasos"><%= stats.totalCasos %></h3>
                    <p>Total de Casos</p>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="stat-box">
                    <h3 id="totalPersonas"><%= stats.totalPersonas %></h3>
                    <p>Personas Registradas</p>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="stat-box">
                    <h3 id="casosEsteMes"><%= stats.casosMes %></h3>
                    <p>Casos Este Mes</p>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="stat-box">
                    <h3 id="totalZonas"><%= stats.totalZonas %></h3>
                    <p>Zonas Registradas</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="auth.js"></script>
    <script src="data.js"></script>
    <script src="dashboard.js"></script>

    <% if (alert === "success") { %>
    <script>
      Swal.fire({
        title: "Bienvenido",
        text: "Inicio de sesión exitoso.",
        icon: "success",
        timer: 2000,
        showConfirmButton: false,
      });
    </script>
    <% } %>

    <script>
      async function logout() {
        try {
          const response = await fetch("/logout", {
            method: "POST",
            credentials: "include",
          });
          if (response.ok) {
            window.location.href = "/login?alert=logout";
          } else {
            Swal.fire("Error", "No se pudo cerrar la sesión", "error");
          }
        } catch (err) {
          console.error(err);
          Swal.fire("Error", "Hubo un problema al cerrar la sesión", "error");
        }
      }

      document.addEventListener("DOMContentLoaded", async () => {
        const chartDelitosAnioEl = document.getElementById("chartDelitosAnio");
        const chartDelitosSexoEl = document.getElementById("chartDelitosSexo");
        const chartTiposDelitosEl =
          document.getElementById("chartTiposDelitos");

        try {
          const res = await fetch("/api/dashboard/stats", {
            credentials: "include",
          });
          const result = await res.json();

          if (!result.success)
            throw new Error("No se pudieron cargar los datos");

          const { delitosAnio, delitosSexo, tiposDelito } = result.data;

          // --- 1. Delitos del Año (Barras) ---
          const labelsAnio = delitosAnio?.map((d) => d.anio) || [];
          const dataAnio = delitosAnio?.map((d) => d.total) || [];
          new Chart(chartDelitosAnioEl.getContext("2d"), {
            type: "bar",
            data: {
              labels: labelsAnio,
              datasets: [
                {
                  label: "Cantidad de Delitos",
                  data: dataAnio,
                  backgroundColor: "rgba(54, 162, 235, 0.7)",
                },
              ],
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
              plugins: { legend: { display: false } },
              scales: { y: { beginAtZero: true, ticks: { precision: 0 } } },
            },
          });

          // --- 2. Delitos por Sexo (Pie) ---
          const labelsSexo = delitosSexo?.map((d) => d.genero) || [];
          const dataSexo = delitosSexo?.map((d) => d.total) || [];

          new Chart(chartDelitosSexoEl.getContext("2d"), {
            type: "pie",
            data: {
              labels: labelsSexo,
              datasets: [
                {
                  data: dataSexo,
                  backgroundColor: ["#FF6384", "#36A2EB", "#FFCE56", "#4BC0C0"],
                },
              ],
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
            },
          });

          // --- 3. Tipos de Delitos (Doughnut) ---
          const labelsTipos = tiposDelito?.map((d) => d.tipo_delito) || [];
          const dataTipos = tiposDelito?.map((d) => d.total) || [];

          // Generar colores dinámicamente
          const colors = [
            "#FF6384",
            "#36A2EB",
            "#FFCE56",
            "#4BC0C0",
            "#9966FF",
            "#FF9F40",
            "#C9CBCF",
            "#8DD17E",
            "#FF6F61",
            "#6B5B95",
            "#F7CAC9",
            "#92A8D1",
            "#955251",
            "#B565A7",
            "#009B77",
            "#DD4124",
            "#45B8AC",
            "#EFC050",
            "#5B5EA6",
            "#9B2335",
          ];

          new Chart(chartTiposDelitosEl.getContext("2d"), {
            type: "doughnut",
            data: {
              labels: labelsTipos,
              datasets: [
                {
                  data: dataTipos,
                  backgroundColor: colors,
                },
              ],
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
            },
          });
        } catch (error) {
          console.error("❌ Error dashboard:", error);
          alert("No se pudieron cargar los gráficos. Revisá la consola.");
        }
      });
    </script>
  </body>
</html>
